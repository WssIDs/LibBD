@model IEnumerable<LibDB.DAL.Author>

@{
    ViewBag.Title = "Администрирование баз";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>База авторы</h2>
<p>
    @Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-sm btn-success" })
</p>

<div class="filterable">
    @*<div class="panel-heading">
        <h3 class="panel-title">Users</h3>
        <div class="pull-right">
            <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
        </div>
    </div>*@

    <table class="table">
        <thead>
            <tr class="filters">
                <th><input type="number" class="form-control" placeholder="Номер"></th>
                <th><input type="text" class="form-control" placeholder="Заглавие"></th>
                <th><input type="number" class="form-control" placeholder="Год"></th>
                <th><input type="text" class="form-control" placeholder="ФИО"></th>
                <th><input type="text" class="form-control" placeholder="Название"></th>
                <th><input type="number" class="form-control" placeholder="Год выпуска"></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>
                    №
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CardTitle)
                </th>
                <th>
                    Год
                </th>
                <th>
                    Фамилия и имя автора
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>Действия над записями</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.AuthorId)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.CardTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.CardYear)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.LastName) @Html.DisplayFor(model => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Year)
                    </td>
                    <td> 
                        @Html.ActionLink(" ", "Edit", new { id = item.AuthorId }, new { @class = "btn btn-xs btn-default glyphicon glyphicon-pencil" })
                        @Html.ActionLink(" ", "Details", new { id = item.AuthorId }, new { @class = "btn btn-xs btn-info  glyphicon glyphicon-eye-open" })
                        @Html.ActionLink(" ", "Delete", new { id = item.AuthorId }, new { @class = "btn btn-xs btn-danger glyphicon glyphicon-remove" })
                    </td>
                </tr>
            }
            </tbody>

    </table>
    </div>

    @section Scripts
{
        <script>
            $(document).ready(function () {
                $('.filterable .btn-filter').click(function () {
                    var $panel = $(this).parents('.filterable'),
                        $filters = $panel.find('.filters input'),
                        $tbody = $panel.find('.table tbody');
                    if ($filters.prop('disabled') == true) {
                        $filters.prop('disabled', false);
                        $filters.first().focus();
                    } else {
                        $filters.val('').prop('disabled', true);
                        $tbody.find('.no-result').remove();
                        $tbody.find('tr').show();
                    }
                });

                $('.filterable .filters input').keyup(function (e) {
                    /* Ignore tab key */
                    var code = e.keyCode || e.which;
                    if (code == '9') return;
                    /* Useful DOM data and selectors */
                    var $input = $(this),
                        inputContent = $input.val().toLowerCase(),
                        $panel = $input.parents('.filterable'),
                        column = $panel.find('.filters th').index($input.parents('th')),
                        $table = $panel.find('.table'),
                        $rows = $table.find('tbody tr');
                    /* Dirtiest filter function ever ;) */
                    var $filteredRows = $rows.filter(function () {
                        var value = $(this).find('td').eq(column).text().toLowerCase();
                        return value.indexOf(inputContent) === -1;
                    });
                    /* Clean previous no-result if exist */
                    $table.find('tbody .no-result').remove();
                    /* Show all rows, hide filtered ones (never do that outside of a demo ! xD) */
                    $rows.show();
                    $filteredRows.hide();
                    /* Prepend no-result row if all rows are filtered */
                    if ($filteredRows.length === $rows.length) {
                        $table.find('tbody').prepend($('<tr class="no-result text-center"><td colspan="' + $table.find('.filters th').length + '">No result found</td></tr>'));
                    }
                });
            });
        </script>
    }
