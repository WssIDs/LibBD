@model LibBD.Models.PageListViewModel<LibDB.DAL.Author>
@using System.Text
@{
    var groupName = Request.RequestContext.RouteData.Values["group"];
    var result = new StringBuilder();
    // стрелка влево
    var liPrevNext = new TagBuilder("li");


    liPrevNext.InnerHtml = Ajax.ActionLink("Первая", "Index",
        new { group = groupName, page = 1 },
        new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Index" },
        new { @class = "page-link"}
    ).ToString();

    if (Model.CurrentPage <= 1)
    {
        liPrevNext.AddCssClass("disabled");
        liPrevNext.AddCssClass("page-item");
        //liPrevNext.InnerHtml = "<span>Первая</span>";
        liPrevNext.InnerHtml = Ajax.ActionLink("Первая", "Index",
            new { group = groupName, page = 1 },
            new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Index" },
            new { @class = "page-link" }
        ).ToString();
    }

    result.Append(liPrevNext.ToString());

    if (Model.CurrentPage > 1)
    {
        liPrevNext.InnerHtml = Ajax.ActionLink("«", "Index",
            new { group = groupName, page = Model.CurrentPage - 1 },
            new AjaxOptions { UpdateTargetId = "Index", InsertionMode = InsertionMode.Replace },
            new { @class = "page-link" }
            ).ToString();
    }
    if (Model.CurrentPage <= 1)
    {
        liPrevNext.AddCssClass("disabled");
        liPrevNext.AddCssClass("page-item");
        liPrevNext.InnerHtml = Ajax.ActionLink("«", "Index",
        new { group = groupName, page = Model.CurrentPage - 1 },
        new AjaxOptions { UpdateTargetId = "Index", InsertionMode = InsertionMode.Replace },
        new { @class = "page-link" }
        ).ToString();
    }

    result.Append(liPrevNext.ToString());
    // пейджер
    for (int i = 1; i <= Model.TotalPages; i++)
    {

        var li = new TagBuilder("li");
        if (i == Model.CurrentPage)
        {
            li.AddCssClass("active");
            li.AddCssClass("page-item");
        }
        //var a = new TagBuilder("a");
        //a.MergeAttribute("href", Url.Action("List", new
        //{
        //    group = groupName,
        //    page = i
        //}));
        //a.InnerHtml = i.ToString();
        //li.InnerHtml = a.ToString();

        li.InnerHtml = Ajax.RouteLink(
            i.ToString(),
            new { action = "Index", group = groupName, page = i },
            new AjaxOptions { UpdateTargetId = "Index", InsertionMode = InsertionMode.Replace },
            new { @class = "page-link" }
            ).ToString();



        result.Append(li.ToString());
    }
    // стрелка вправо
    liPrevNext = new TagBuilder("li");
    liPrevNext.InnerHtml = Ajax.ActionLink("»", "Index",
        new { group = groupName, page = Model.CurrentPage + 1 },
        new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Index" },
        new { @class = "page-link" }
    ).ToString();
    if (Model.CurrentPage == Model.TotalPages)
    {
        liPrevNext.AddCssClass("disabled");
        liPrevNext.AddCssClass("page-item");
        liPrevNext.InnerHtml = Ajax.ActionLink("»", "Index",
        new { group = groupName, page = Model.CurrentPage + 1 },
        new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Index" },
        new { @class = "page-link" }
        ).ToString();
    }

    result.Append(liPrevNext.ToString());

    liPrevNext.InnerHtml = Ajax.ActionLink("Последняя", "Index",
        new { group = groupName, page = Model.TotalPages },
        new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Index" },
        new { @class = "page-link" }
        ).ToString();

    result.Append(liPrevNext.ToString());
}
@*<nav aria-label="Page navigation example">*@
    <ul class="pagination justify-content-center">
        @MvcHtmlString.Create(result.ToString())
    </ul>
@*</nav>*@
